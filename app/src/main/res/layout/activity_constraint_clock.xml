<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintClockActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JLU"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/clockCenter"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="12"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="1"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="2"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="3"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="4"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="5"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="6"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="7"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="8"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="9"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="10"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="11"
        app:layout_constraintCircle="@id/clockCenter"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="140dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>